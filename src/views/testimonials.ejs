<%- include('partials/header.ejs') %>

  <%- include('partials/navbar.ejs') %>

<h1 class="text-center mt-10 text-3xl font-[500]">Testimonials</h1>
  

  <div class="xl:max-w-[1200px] max-w-[90%]  mx-auto mb-[200px]">
    <div class="filter-rating  flex justify-center gap-3 my-6">
      <a href="/testi" class="bg-black text-white px-4 ">ALL</a>
      <a href="/testi/rating/1" class="bg-black text-white px-4 ">1</a>
      <a href="/testi/rating/2" class="bg-black text-white px-4 ">2</a>
      <a href="/testi/rating/3" class="bg-black text-white px-4 ">3</a>
      <a href="/testi/rating/4" class="bg-black text-white px-4 ">4</a>
      <a href="/testi/rating/5" class="bg-black text-white px-4 ">5</a>
    </div>
    <p class="text-center text-red-600">
      <%= !dataTesti.length ? 'Tidak ada yang memberi rating ' + bintang : '' %>
    </p>
    <div class="content-responsive  w-full">
      <% dataTesti.forEach(testi => { %>
        <div class="bg-white rounded-lg shadow-xl">
          <img src="<%= testi.image %>" alt="<%= testi.image %>" class="w-full h-[200px] object-cover rounded-t-lg">
          <div class="flex flex-col p-6">
              <h1 class="text-sm line-clamp-1">" <%= testi.quote %> "</h1>
              <p class="text-sm text-end mt-10">- <%= testi.author %></p>
              <div class="rating text-[16px] text-end">
                <% for (let i = 1; i <= 5; i++) { %>
                  <span class="text-[orangered]">
                    <% if (i <= testi.rating) { %>
                      &#9733;
                    <% } else { %>
                      &#9734;
                    <% } %>
                  </span>
                <% } %>
              </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

<%- include('partials/footer.ejs') %>


