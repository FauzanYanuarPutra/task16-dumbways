<%- include('../partials/header.ejs') %>

  <%- include('../partials/navbar.ejs') %>

<div class="md:w-[500px] md:mx-auto  mx-5 my-8 p-4  rounded-lg">
  <h1 class="mb-10 font-[600] text-2xl text-center">LOGIN YOUR ACCOUNT</h1>
  <form action="/login" method="post" id="login-form">

    <div class="mb-4">
      <label for="input-email" class="block text-sm font-medium ">Email</label>
      <input type="email" name="email" id="input-email" class="mt-1 p-2 w-full border rounded-lg shadow-md" value="<%= email ? email : '' %>" required />
    </div>

    <div class="mb-4">
      <label for="input-password" class="block text-sm font-medium ">password</label>
      <input type="password" name="password" id="input-password" class="mt-1 p-2 w-full border rounded-lg shadow-md"  />
    </div>

    <p class="text-red-800 text-sm"><%= errorEmail ? errorEmail : '' %></p>

    <div class="flex justify-end">
      <button type="submit" class="px-4 py-2 bg-[orangered] text-white font-semibold rounded-lg">
        Submit
      </button>
    </div>
  </form>
</div>


